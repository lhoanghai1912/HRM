{
  "compilerOptions": {
    "jsx": "react-native", // Đảm bảo rằng cấu hình jsx được set là react-native
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "noEmit": true
  },
  "include": ["src/**/*", "node_modules/@types"],
  "exclude": ["node_modules"]
}
